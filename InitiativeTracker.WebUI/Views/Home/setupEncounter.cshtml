

<div class="section panel panel-primary"
     data-bind="ifnot: model.displayEncounter">
    <div class="panel-heading">Add/Remove Characters from Encounter</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Name</th></tr>
            </thead>
            <tbody data-bind="foreach: model.characters">
                <tr>
                    <td>
                        <button data-bind="click: addToEncounter"
                                class="btn btn-primary">
                            <span class="glyphicon glyphicon-plus"
                                  data-bind="text: Name"></span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>