@using InitiativeTracker.Domain.Entities
@model IEnumerable<Character>

<div class="section"
     data-bind="ifnot: model.displayEncounter">
    <div class="row">
        <div class="panel panel-primary col-md-6">
            <div class="panel-heading">Add to Encounter</div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr><th>Name</th><th>Group</th></tr>
                    </thead>
                    <tbody>
                        @foreach (Character character in Model)
                        {
                            <tr>
                                <td>
                                    @using (Html.BeginForm("AddToEncounter", "Encounter"))
                                    {
                                        <button class="btn btn-primary"
                                                type="submit">
                                            <span class="glyphicon glyphicon-plus"></span>
                                            @character.Name
                                        </button>
                                    }
                                </td>
                                <td>
                                    @character.Group
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="panel panel-primary col-md-6">
            <div class="panel-heading">Remove from Encounter</div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr><th>Name</th><th>Group</th></tr>
                    </thead>
                    <tbody data-bind="foreach: model.encounter.characters">
                        <tr>
                            <td>
                                <button data-bind="click: session.removeFromEncounter">
                                    <span class="glyphicon glyphicon-minus"></span>
                                    <span data-bind="text: Name"></span>
                                </button>
                            </td>
                            <td data-bind="text: Group"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

