
<div class="section panel panel-primary"
     data-bind="ifnot: model.displaySummary">
    <div class="panel-heading">Create Character</div>

    <div class="panel-body">
        <div class="form-group">
            <label>Character Name</label>
            <input class="form-control" data-bind="value: model.editor.name" />
        </div>
        <div class="form-group">
            <label>Group</label>
            <input class="form-control" data-bind="value: model.editor.group" />
        </div>
        <button class="btn btn-primary"
                data-bind="click: saveNewCharacter">
            Save
        </button>
        <button class="btn btn-default"
                data-bind="click: cancelNewCharacter">
            Cancel
        </button>
    </div>
</div>