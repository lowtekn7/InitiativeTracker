
<div class="section panel panel-primary"
     data-bind="ifnot: model.displaySummary">
    <div class="panel-heading">Create Character</div>

    <div class="panel-body">
        <div class="form-group">
            <label>Character Name</label>
            <input class="form-control" data-bind="value: model.editor.name" />
        </div>
        <div class="form-group">
            <label>Group</label>
            <select class="form-control" data-bind="options: availableGroups,
                                                    optionsText: 'Name',
                                                    value: selectedGroup">

            </select>
        </div>
        <div class="form-group">
            <label>Initiative Bonus</label>
            <input class="form-control" data-bind="value: model.editor.initiative_bonus"/>
        </div>
        <button class="btn btn-primary"
                data-bind="click: database.saveCharacter">
            Save
        </button>
        <button class="btn btn-default"
                data-bind="click: resetEditor">
            Cancel
        </button>
    </div>
</div>