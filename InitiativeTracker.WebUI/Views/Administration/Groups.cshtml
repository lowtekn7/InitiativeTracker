@using InitiativeTracker.Domain.Entities
@model IEnumerable<CharacterGroup>

@{
    ViewBag.Title = "Groups";
}


<div class="section panel panel-primary">
    <div class="panel-heading">Current Groups</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Name</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@item.Name, "EditGroup", "Administration", new { id = item.Group_ID }, null)</td>
                        <td>@Html.ActionLink("Remove","Delete","Group", new { id = item.Group_ID }, new { @class = "btn btn-default btn-xs" })</td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Create", "CreateGroup", null, new { @class = "btn btn-primary" })
    </div>
</div>

