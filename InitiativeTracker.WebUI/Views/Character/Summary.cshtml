@using InitiativeTracker.WebUI.Models
@using InitiativeTracker.Domain.Entities
@model IEnumerable<CharacterViewModel>

@{
    ViewBag.Title = "Summary";
}

<div class="section panel panel-primary">
    <div class="panel-heading">Current Characters</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Name</th><th>Group</th><th></th></tr>
            </thead>
            <tbody>
                @foreach(CharacterViewModel item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@item.Name,"Edit", new { id = @item.Character_ID })</td>
                        <td>@item.Group</td>
                        <td>
                            @Html.ActionLink("Remove","Delete", new { id = @item.Character_ID }, new { @class = "btn btn-xs btn-default" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>